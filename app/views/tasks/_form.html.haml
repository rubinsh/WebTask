= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation.alert
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :completed
    = f.check_box :completed
    = f.label :due_date
    = f.text_field :due_date
  .actions
    = f.submit
