<div class="span-4 sidebar">
  <div class="ui-widget-content ui-corner-all sidebar_panel">
    <h3 class="ui-widget-header ui-corner-all">Filters</h3>
    <div>
      <ul class="button_list">
        <li class="ui-state-default ui-corner-all"><%= link_to "Open Tasks", tasks_path(:type => "not_completed"), :style => "width: 97%;" %></li>
        <li class="ui-state-default ui-corner-all"><%= link_to "Completed Tasks", tasks_path(:type => "completed"), :style => "width: 97%;" %></li>
        <li class="ui-state-default ui-corner-all"><%= link_to "All tasks", tasks_path, :style => "width: 97%;" %></li>
      </ul>
    </div>

  </div>
  <div class="ui-widget-content ui-corner-all sidebar_panel">
    <h3 class="ui-widget-header ui-corner-all">Categories</h3>
    <div id="category_list">
      <ul class="button_list">
        <%= render current_user.categories %>
      </ul>
    </div>
  </div>
</div>