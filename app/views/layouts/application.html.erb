<!DOCTYPE html>
<html>
<head>
  <title>WebTask</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>

  <div class="header_background">
    <div class="container">
    <div id="header" class="span-24">
      <div class="span-18 header_logo">
        <!--<h1></h1>-->
      </div>
      <div id="user_bar" class="span-6 right">
        <% if logged_in? %>
            <%= link_to "Logout", logout_path %>
        <% else %>
            <%= link_to "Join WebTask", new_user_path %> |
            <%= link_to "Login", login_path %>
        <% end %>
      </div>
    </div>
      </div>
  </div>
  <div class="container">
  <div id="main" class="span-24 container_12">
    <div class="grid_12">
      <%= content_tag(:p, notice, :class => 'success') if notice.present? %>
      <%= content_tag(:p, alert, :class => 'alert') if alert.present? %>
    </div>
    <% if logged_in? %>
        <%= render 'layouts/menu_bar' %>
        <div class="span-24">
          <div>
            <%= render 'layouts/sidebar' %>
            <%= yield %>
          </div>
        </div>
    <% else %>
        <%= yield %>
    <% end %>
  </div>
  <div id="footer" class="span-24">
    <hr/>
    <div class="quiet prepend-10">

      Rubinsh's first ROR application <br/>
      <%= link_to "Beginning Rails 3", "http://beginningrails.com" %>
    </div>
  </div>
</div>
</body>
</html>
