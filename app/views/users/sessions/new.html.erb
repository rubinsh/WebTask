<div id="auth_form" class="prepend-7">
  <div id="auth_form_content" class="span-9">
    <h2>Sign in</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <p>
          <span class="span-3"><%= f.label "Email:" %></span>
          <span><%= f.text_field :email %></span>

          <span class="span-3"><%= f.label "Password:" %></span>
          <span><%= f.password_field :password %></span>
        </p>

        <% if devise_mapping.rememberable? -%>
            <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
        <% end -%>

        <p><%= f.submit "Sign in" %></p>
    <% end %>
    <hr/>
    Already have an account on these services? Sign in with:
    <br/>
    <div class="oauth_buttons">
      <%= link_to "Facebook", user_omniauth_authorize_path(:facebook), :class => "facebook" %>
    </div>

    <br/>
    <br/>
  </div>
</div>
<hr/>


<%= render :partial => "devise/shared/links" %>